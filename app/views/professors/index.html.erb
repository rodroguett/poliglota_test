<h1>Professors</h1>


<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.name %></td>
        <td><%= link_to 'Show', professor, class: "btn btn-dark" %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'You will delete all the courses of this teacher and all their respectives sessions. Are you sure?' }, class: "btn btn-danger" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor', new_professor_path, class: "btn btn-outline-success" %>
